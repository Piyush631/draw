{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "moduleResolution": "NodeNext",
      "module": "NodeNext",
      "target": "ES2022",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}